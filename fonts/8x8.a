;; 8x8 font
;; from https://github.com/dhepper/font8x8
	!cpu 65816

!macro long {
	REP #$30
}
!macro const .n {
	LDA+2 #.n
}

	CHARGEN = $9000
	* = $2000
CGFILL:
	+long
	PHB		;; preserve the databank
	+const $0001
	PHA
	PLB
	PHB
	PLA

	JSR .FILL
	PLB		;; restore the databank
	RTL

CG_END:
	!word .FIN-.U0020

.FILL:
	LDA CG_END
	STA $02
	+const $0000
	TAX
	+const $0200	;; start at $20 character
	TAY
	SEP #$20	;; short A
-	LDA #$08
	STA $01
	JSR .CELL	;; 8 bytes character data
	LDA #$08
	STA $01
	JSR .CELL2
	CPX $02		;; 8 bytes zero
	BNE -
	RTS


.CELL			;; mirror and fill 8 bytes
	LDA .U0020,X
	STA $00
	CLC
	ROR $00		;; mirror the byte
	ROL
	ROR $00
	ROL
	ROR $00
	ROL
	ROR $00
	ROL
	ROR $00
	ROL
	ROR $00
	ROL
	ROR $00
	ROL
	ROR $00
	ROL
	STA CHARGEN,Y
	INX
	INY
	DEC $01
	BNE .CELL
	RTS

.CELL2				;; fill with zeros
	LDA #$00
-	STA CHARGEN,Y
	INY
	DEC $01
	BNE .CELL2
	RTS
	

